<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Cadastro</title>
    <% include ../partials/header.ejs %>
  </head>
  <body>
    <section id="contact" class="section-padding">
        <% include ../partials/nav.ejs %>
        <div class="text-center">
          <div class="container"  style='max-width:700px'>
            <table cellspacing="0">
              <tr>
                 <th>Name</th>
                 <th>Email</th>
                 <th>Telefone</th>
                 <th>Ação</th>
              </tr>

              <% users.forEach(function(user){ %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.phone %></td>
                    <td><a href="edit/<%= user.id %>">Editar</a>  <a href="delete/<%= user.id %>">Deletar</a></td>
                </tr>
              <% })%>

            </table>
          </div>
        </div> <!-- class=text-center -->
      </section>

    <% include ../partials/footer.ejs %>
  </body>

<style>
  table, th, td {
    border: 1px solid grey;
    border-collapse: collapse;
  }
  th, td {
    padding: 5px;
    text-align: left;
  }
</style>
</html>
